<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_sponsors" tools:context="com.scott.assignment1.SponsorsActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true">

        <ImageView
            android:layout_width="156dp"
            android:layout_height="156dp"
            android:id="@+id/microsoft_sponsor"
            android:layout_gravity="left|top"
            android:src="@drawable/sponsor_microsoft"/>

        <ImageView
            android:layout_width="145dp"
            android:layout_height="78dp"
            android:id="@+id/google_sponsor"
            android:layout_gravity="left|center_vertical"
            android:src="@drawable/sponsor_google"/>

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar"
            android:layout_gravity="left|center_vertical" />

        <ImageView
            android:layout_width="156dp"
            android:layout_height="110dp"
            android:id="@+id/oracle_sponsor"
            android:layout_gravity="left|bottom"
            android:src="@drawable/sponsor_oracle"/>
    </FrameLayout>
</RelativeLayout>
