<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main_navigation"
    tools:context="com.scott.assignment1.MainNavigationActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <Button
            style="@style/OrangeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Speakers"
            android:id="@+id/buttonEvent1ViewSpeakers"
            android:layout_below="@+id/textViewRoomEvent1"
            android:layout_alignStart="@+id/textViewEvent1"
            android:layout_marginTop="60dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Java Panel"
            android:id="@+id/textViewEvent1"
            android:layout_below="@+id/textView_welcome_user_email"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="54dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="West Hall - C 45"
            android:id="@+id/textViewRoomEvent1"
            android:layout_alignBaseline="@+id/textViewTimeEvent1"
            android:layout_alignBottom="@+id/textViewTimeEvent1"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="11 AM - 1 PM"
            android:id="@+id/textViewTimeEvent1"
            android:layout_below="@+id/textViewEvent1"
            android:layout_toEndOf="@+id/textViewRoomEvent1"
            android:layout_marginStart="46dp" />


        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_column="0"
            android:id="@+id/speakers_frag_1_container"
            android:layout_below="@+id/buttonEvent1ViewSpeakers"
            android:layout_alignParentStart="true"
            android:layout_marginTop="46dp"
            android:layout_toStartOf="@id/textView_welcome_user_email"
            android:layout_alignParentEnd="true" />

        <TextView
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView_welcome_user_email"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</RelativeLayout>
